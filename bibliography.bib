issn = {03010082},
journal = {Progress in Neurobiology},
keywords = {Amputation,Brain-machine interface,Hybrid bionic system,Neural interface,Neuroplasticity,Phanthom-limb pain,Prosthesis},
number = {2},
pages = {114--126},
title = {{Neuroplasticity in amputees: Main implications on bidirectional interfacing of cybernetic hand prostheses}},
