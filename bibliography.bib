journal = {Prosthetics and Orthotics International},
keywords = {Design,Prosthesis,Prosthetics,Rehabilitation,Upper limb},
number = {3},
pages = {236--257},
pmid = {17979010},
title = {{Upper limb prosthesis use and abandonment: A survey of the last 25 years}},
volume = {31},
year = {2007}
